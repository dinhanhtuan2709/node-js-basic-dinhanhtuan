<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NODE JS BASIC</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a class="active" href="/upload-file">Upload Files</a>
    </div>
    <div class="upload-file-container">
        <form method="POST" action="/upload-single-image" enctype="multipart/form-data">
            <div>
                <label ><b style="color: red;">Avatar</b></label>
                <input type="file" name="profile_pic"/>
            </div>
            <div>
                <button type="submit">Save</button>
            </div>
        </form>

        <form method="POST" action="/upload-multiple-images" enctype="multipart/form-data">
            <div>
                <label>Select multiple images:</label>
                <input type="file" name="multiple_images" multiple />
            </div>
            <div>
                <input type="submit" name="btn_upload_multiple_images" value="Upload" />
            </div>
        </form>
    </div>
</body>

</html>